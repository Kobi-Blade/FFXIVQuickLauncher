<UserControl x:Class="XIVLauncher.Xaml.SpeedSpinBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="140">
    <Grid>
        <Border CornerRadius="4" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Background="{DynamicResource MaterialDesignPaper}">
            <Grid Margin="4,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="DecreaseButton" Width="28" Height="28" Padding="0" Grid.Column="0" Click="DecreaseButton_Click"
                        Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Minus" Width="18" Height="18"/>
                </Button>
                <TextBox x:Name="ValueBox" MinWidth="40" Margin="2,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                         Padding="5"
                         Grid.Column="1"
                         Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                </TextBox>
                <TextBlock x:Name="UnitBlock" Grid.Column="2" Text="{Binding Unit, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="6,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                <Button x:Name="IncreaseButton" Width="28" Height="28" Padding="0" Grid.Column="3" Click="IncreaseButton_Click"
                        Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Plus" Width="18" Height="18"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
